{
  {
    "ReverseProxy": {
      "Routes": {
        "catalog-route": {
          "ClusterId": "catalog-cluster",
          "Match": { "Path": "/catalog/{**catch-all}" },
          "TransformPathRemovePrefix": "/catalog"
        },
        "cart-route": {
          "ClusterId": "cart-cluster",
          "Match": { "Path": "/cart/{**catch-all}" },
          "TransformPathRemovePrefix": "/cart"
        },
        "ordering-route": {
          "ClusterId": "ordering-cluster",
          "Match": { "Path": "/order/{**catch-all}" },
          "TransformPathRemovePrefix": "/order"
        }
      },
      "Clusters": {
        "catalog-cluster": {
          "Destinations": {
            "catalog": { "Address": "http://catalog-api.centeshop.svc.cluster.local/" }
          }
        },
        "cart-cluster": {
          "Destinations": {
            "cart": { "Address": "http://cart-api.centeshop.svc.cluster.local/" }
          }
        },
        "ordering-cluster": {
          "Destinations": {
            "order": { "Address": "http://ordering-api.centeshop.svc.cluster.local/" }
          }
        }
      }
    }
  }


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
